doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Game Hub - Room creation
  body
    script(src='/socket.io/socket.io.js')
    script.
      const socket = io();
      
      selected_game_id = "";

      function select_game(game_id) {
        selected_game_id = game_id;
        console.log("selected game: " + game_id);
        document.getElementById("button_create_room").disabled = false;
      }

      function create_room() {
        const button_create_room = document.getElementById("button_create_room");
        console.log("creating game for id " + selected_game_id)
      }
    h1 List of games
    div(class='games-list')
        each game in games_list
          div(class='game', onclick=`select_game("${game.id}")`)
                h3 #{game.name}
                |
                p #{game.description}
    button#button_create_room(onclick='create_room()', disabled = 'true') Create room